{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build/",
    "module": "esnext",
    "types": ["node"],
    "downlevelIteration": true,
    "baseUrl": ".",
    "jsxFactory": "React.createElement",
    "strict": true,
    "strictFunctionTypes": true,
    "paths": {
      "@/*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules", "../../node_modules", "src/**/__stories__", "src/**/__tests__"]
}
